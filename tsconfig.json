{
  "include": ["**/*.ts", "**/*.vue", "**/*.d.ts"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "experimentalDecorators": true,
    "module": "ES2015",
    "lib": ["es6","dom"],
    "target": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./lib/types",
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {},
    "resolveJsonModule": true
  }
}
